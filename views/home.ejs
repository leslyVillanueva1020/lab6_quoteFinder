<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("partials/head.ejs") %>
</head>
<body class = "text-center">
    <header class="page-header">
        <h1>Famous Quotes</h1>
    </header>

    <main class="container">
        <p id="errMsg" class="error-msg" aria-live="polite"></p>

        <!-- Keyword -->
        <section class="search-card">
        <h2>Keyword</h2>
        <form id="searchByKeyWordForm" action="/searchByKeyword" method="GET">
            <div class="form-group">
            <input id="kw" type="text" name="keyword" placeholder="e.g. happiness">
            </div>
            <button class="btn">Search by Keyword</button>
        </form>
        </section>

        <!-- Author -->
        <section class="search-card">
        <h2>Author</h2>
        <form action="/searchByAuthor" method="GET">
            <div class="form-group">
            <select id="authorId" name="authorId">
                <% for (let row of rows) { %>
                <option value="<%= row.authorId %>"><%= row.firstName %> <%= row.lastName %></option>
                <% } %>
            </select>
            </div>
            <button class="btn">Search by Author</button>
        </form>
        </section>

        <!-- Category -->
        <section class="search-card">
        <h2>Category</h2>
        <form action="/searchByCategory" method="GET">
            <div class="form-group">
            <select id="category" name="category">
                <% for (let i of category) { %>
                <option value="<%= i.category %>"><%= i.category %></option>
                <% } %>
            </select>
            </div>
            <button class="btn">Search by Category</button>
        </form>
        </section>

        <!-- Likes -->
        <section class="search-card">
        <h2>Likes</h2>
        <form action="/searchByLikes" method="GET">
            <div class="form-row">
            <div class="form-group">
                <label for="minLikes">Minimum</label>
                <input id="minLikes" type="number" name="minLikes" placeholder="0">
            </div>
            <div class="form-group">
                <label for="maxLikes">Maximum</label>
                <input id="maxLikes" type="number" name="maxLikes" placeholder="100">
            </div>
            </div>
            <button class="btn">Search by Likes</button>
        </form>
        </section>
    </main>

    <%- include("partials/footer.ejs") %>

    <script src="/js/home.js"></script>
</body>
</html>